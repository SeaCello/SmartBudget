// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Executar SmartBudget",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/smartbudget",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb", // ou "C:\\mingw64\\bin\\gdb.exe" no Windows
      "setupCommands": [
        {
          "description": "Habilita impressão de variáveis",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
